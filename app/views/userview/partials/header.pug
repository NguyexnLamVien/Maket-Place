                      path(d='M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6')
                ul.logout 
                  li 
                    form(action=`/auth/${user.id}?_method=DELETE`, method="post") 
                     button(type="submit" vlue="logout") logout
              - else 
                .account
                  a.header-icon(href="/auth/signin")
                    svg.bi.bi-person-fill(xmlns='http://www.w3.org/2000/svg' width='30' height='30' fill='currentColor' viewbox='0 0 16 16')
                      path(d='M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6')
