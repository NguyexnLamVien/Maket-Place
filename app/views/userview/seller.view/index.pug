extends ../layout2

block content
  .page-wrapper
    include ../partials/header
    main.container.mt-5
      // Thông tin shop
      .row.mb-4.bg-light.p-4.rounded.shadow-sm
        .col-md-3.text-center
          - if(user.avatar)
              img.img-fluid.rounded-circle.shadow(src=`data:image/png;base64,${user.avatar.toString('base64')}` alt='Ảnh đại diện' style='width: 200px; height: 200px; object-fit: cover;')
          - else
              img.img-fluid.rounded-circle.shadow(src='images/avatar_user_null.png' alt='Avatar' style='width: 200px; height: 200px; object-fit: cover;')
        .col-md-9
          h2.shop-name.text-center.text-primary.mb-3= user.fullName 
            |(shop)
            i.fas.fa-check-circle.text-success
          .shop-stats.mb-3
            .row
              .col-md-4
                .stat-item.text-center
                  i.fas.fa-star.fa-2x.text-warning.mb-2
                  h4.mb-0 4.8
                  p.text-muted 1000 Đánh giá
              .col-md-4
                .stat-item.text-center
                  i.fas.fa-box.fa-2x.text-info.mb-2
                  h4.mb-0 5000
                  p.text-muted Sản phẩm
              .col-md-4
                .stat-item.text-center
                  i.fas.fa-clock.fa-2x.text-secondary.mb-2
                  h4.mb-0= joinDate
                  p.text-muted Ngày tham gia
          .d-flex.justify-content-center.align-items-center
            //- button.btn.btn-outline-primary.me-3
            //-   i.fas.fa-heart
            //-   |  Theo d&otilde;i
            button.btn.btn-success.me-3
              i.fas.fa-comments
              |  Chat v&#x1EDB;i shop
      // Danh sách sản phẩm
      h3.mb-5.text-center.text-primary.border-bottom.pb-3 T&#x1EA5;t c&#x1EA3; s&#x1EA3;n ph&#x1EA9;m
      .row
        // Sản phẩm 1
        .col-lg-2.col-sm-6.mb-4
          .card.product-card.shadow.border-0.h-100.transition-hover
            .position-relative.overflow-hidden
              img.card-img-top(src='assets/images/portfolio/item-1.jpg' alt='Sản phẩm 1')
            .card-body.text-center
              h5.card-title.text-truncate T&ecirc;n s&#x1EA3;n ph&#x1EA9;m 1
              p.card-text.text-danger 500.000&dstrok;
              .product-rating
                i.fas.fa-star.text-warning
                i.fas.fa-star.text-warning
                i.fas.fa-star.text-warning
                i.fas.fa-star.text-warning
                i.fas.fa-star-half-alt.text-warning
                span.text-muted.ml-1 (4.5)
      // Nút xem thêm
      .text-center.mt-5
        button.btn.btn-outline-primary.btn-lg.rounded-pill.px-5.shadow-sm
          | Xem th&ecirc;m s&#x1EA3;n ph&#x1EA9;m

    include ../partials/footer